<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gym"
        tools:targetApi="31">
        <activity
            android:name=".ViewExercisesActivity"
            android:exported="false"
            android:label="@string/title_activity_view_exercises"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".NewExerciseActivity"
            android:exported="false"
            android:label="@string/title_activity_new_exercise"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".WorkoutActivity"
            android:exported="false"
            android:label="@string/title_activity_workout"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".ConsultHistoryActivity"
            android:exported="false"
            android:label="@string/title_activity_consult_history"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".DetailedExerciseActivity"
            android:exported="false"
            android:label="@string/title_activity_detailed_exercise"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".ViewTrainingsActivity"
            android:exported="false"
            android:label="@string/title_activity_view_trainings"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Gym" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Gym">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>